<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView_driver_landing_item"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/colorBlueBright"
        android:padding="4dp"
        card_view:cardCornerRadius="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_height="150dp">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <TextView
                android:id="@+id/textView_customer_name_driver_landing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Winston"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline2"
                card_view:layout_constraintBottom_toBottomOf="parent"

                card_view:layout_constraintVertical_bias="0.25"/>
        <TextView
                android:text="$20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/textView_order_total_driver_landing"
                card_view:layout_constraintStart_toStartOf="@+id/guideline2"
                android:layout_marginStart="8dp" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" card_view:layout_constraintHorizontal_bias="0.9"
                android:layout_marginTop="16dp" card_view:layout_constraintTop_toTopOf="parent"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="216dp"
                android:id="@+id/guideline2" card_view:layout_constraintGuide_percent="0.4"/>
        <Button
                android:text="Take It"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:background="@color/colorButton"
                card_view:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintHorizontal_bias="1.0" card_view:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="337 Heritage Lane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_customerAddress_driver_landing"
                card_view:layout_constraintTop_toBottomOf="@+id/textView_order_total_driver_landing"
                android:layout_marginBottom="8dp" card_view:layout_constraintBottom_toTopOf="@+id/button"
                card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                card_view:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
                card_view:layout_constraintVertical_bias="0.38"
                card_view:layout_constraintHorizontal_bias="0.82"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>