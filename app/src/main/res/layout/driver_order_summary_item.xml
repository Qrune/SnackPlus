<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView_driver_order_summary_item"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="7dp"
        android:padding="4dp"
        android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">
        <ImageView
                android:id="@+id/imageView_driver_order_summary_item_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                tools:src="@tools:sample/avatars"
                android:contentDescription="TODO"/>
        <TextView
                android:id="@+id/textView_driver_order_summary_item_name"
                android:layout_toRightOf="@+id/imageView_driver_order_summary_item_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:padding="5dp"
                android:textStyle="bold"
                tools:text="@string/item_name"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/textView_driver_order_summary_item_count"
                  android:layout_toRightOf="@id/imageView_driver_order_summary_item_image"
                  android:layout_below="@+id/textView_driver_order_summary_item_name"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="15dp"
                  android:textSize="20sp"
                  android:gravity="center"
                  android:text="@string/x2"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:id="@+id/textView_driver_order_summary_item_price"
                  android:textSize="20sp"
                  android:layout_centerInParent="true"
                  android:layout_centerVertical="true"
                  android:textStyle="bold"
                  android:text="$20"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
