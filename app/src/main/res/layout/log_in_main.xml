<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="@string/log_in"
            android:textColor="@color/colorBlue"
            android:textSize="48sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"/>
    <EditText
            android:id="@+id/login_email"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_in"
            android:layout_centerHorizontal="true"
            android:hint="@string/email"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/log_in" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/login_password"
            android:layout_width="310dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_email"
            android:layout_centerHorizontal="true"
            android:hint="@string/password"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/login_email" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="275dp"
            android:layout_height="44dp"
            android:id="@+id/btn_login_login"
            android:layout_below="@+id/login_password"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_rounded"
            android:text="@string/sign_in"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textAllCaps="false" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/login_password" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="275dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_rounded"
            android:id="@+id/btn_login_signup"
            android:layout_below="@+id/btn_login_login"
            android:layout_centerHorizontal="true"
            android:text="@string/sign_up"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textAllCaps="false" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_login" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>