<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/background"
>


    <TextView
            android:text="Winston"
            android:textColor="@color/icon_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_customer_order_name"
            android:textSize="24sp"
            android:textAlignment="textEnd" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/customer_map_view"/>
    <TextView
            android:text="8122395326"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/icon_color"
            android:id="@+id/textView_customer_order_number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_customer_order_name"
            android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"/>
    <TextView
            android:text="337 Heritage Lane E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_customer_order_address"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_customer_order_number"
            android:textSize="18sp"
            android:textColor="@color/icon_color"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp" android:textAlignment="textEnd"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/fui_ic_phone_white_24dp"
            android:id="@+id/fab_call_customer" app:backgroundTint="@color/fui_linkColor"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView_customer_order_address"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="0dp"
            android:layout_height="304dp"
            android:id="@+id/customer_map_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/order_status"
            android:id="@+id/imageView1" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

</android.support.constraint.ConstraintLayout>