<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/customer_checkout_recycler_view_cardView"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="7dp"
        android:padding="4dp"
        android:layout_height="90dp">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp">
        <ImageView
                android:id="@+id/customer_item_select_recycler_view_item_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                tools:src="@tools:sample/avatars" android:contentDescription="TODO"/>
        <TextView
                android:id="@+id/customer_item_select_recycler_view_item_name"
                android:layout_toRightOf="@+id/customer_item_select_recycler_view_item_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:padding="5dp"
                android:textStyle="bold"
                tools:text="@string/item_name"/>
        <TextView
                android:id="@+id/customer_checkout_recycler_view_item_price"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_toRightOf="@id/customer_item_select_recycler_view_item_image"
                android:layout_below="@+id/customer_item_select_recycler_view_item_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/dolllor_price_2"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="20dp"
                      android:layout_marginBottom="10dp"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true"
                      android:orientation="horizontal">
            <Button android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorBlueBright"/>
            <TextView android:layout_width="50dp" android:layout_height="40dp"
                      android:layout_marginHorizontal="5dp"
                      android:text="23"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textSize="20sp"/>
            <Button android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorBlueBright"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>